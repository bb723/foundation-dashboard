# Microsoft Azure AD Authentication
# Get these from your Azure AD app registration
MS_CLIENT_ID=your-client-id-here
MS_CLIENT_SECRET=your-client-secret-here
MS_TENANT_ID=your-tenant-id-here

# OAuth Redirect URI
# For local development: http://localhost:5000/auth/callback
# For production: https://your-app-name.herokuapp.com/auth/callback
REDIRECT_URI=http://localhost:5000/auth/callback

# Flask Configuration
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here

# Flask Environment
# Set to 'production' for Heroku deployment
FLASK_ENV=development

# Application Port (optional, defaults to 5000)
PORT=5000
